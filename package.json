{
  "name": "@sap/capire-bookshop",
  "version": "1.0.0",
  "description": "A simple bookshop application, build in a self-contained all-in-one fashion, i.e. w/o reusing other packages.",
  "repository": "https://github.wdf.sap.corp/caps/bookshop.git",
  "license": "ISC",
  "dependencies": {
    "@sap/cds": "^3.16.3",
    "@sap/cds-odata-v2-adapter-proxy": "^1.2.0",
    "express": "^4.16.4"
  },
  "devDependencies": {
    "jest": "^24.8.0",
    "nodemon": "^1.19.2",
    "sqlite3": "^4.1.0",
    "supertest": "^4.0.2"
  },
  "scripts": {
    "setup": "npm install && npm run deploy",
    "deploy": "cds deploy db --to sqlite:db/bookshop.db",
    "debug": "node --inspect node_modules/@sap/cds/bin/cds.js run",
    "start": "cds run",
    "v2server": "node v2server",
    "test": "jest"
  },
  "cds": {
    "requires": {
      "db": {
        "kind": "sqlite",
        "model": "db",
        "credentials": {
          "database": "db/bookshop.db"
        }
      }
    }
  }
}